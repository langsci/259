%% Node macros for tree-dvips

%% Plain terminal node
% #1: node number
% #2: terminal string 
\newcommand{\termnode}[2]{\node{#1}{\textit{#2}}}

%% Terminal node with gloss
% #1: node number
% #2: terminal string 
% #3: gloss
\newcommand{\gtermnode}[3]{\node{#1}{\begin{tabular}{c}\textit{#2}\\#3\end{tabular}}}

%% terminal node with lexical annotations (f-descriptions)
% #1: node number
% #2: terminal string
% #3: lexical annotations
\newcommand{\ltermnode}[3]%
{\node{#1}{\begin{tabular}[t]{l}
\multicolumn{1}{c}{\textit{#2}}\\
#3
\end{tabular}}}

